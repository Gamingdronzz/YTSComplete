<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_min"
    android:layout_height="wrap_content"
    android:minHeight="220dp"
    app:cardElevation="@dimen/elevation_medium"
    app:cardCornerRadius="@dimen/corner_radius_min"
    tools:context="com.gamingdronzz.yts.Activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/small_cover"
            android:layout_alignParentTop="true"
            android:id="@+id/image_cover_small"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_15"
            android:textStyle="italic"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/movie_name"
            android:paddingLeft="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small"
            android:id="@+id/movie_year"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_15"
            android:layout_below="@id/image_cover_small"
            android:textColor="@color/colorBlack"
            android:paddingLeft="@dimen/padding_small"
            android:textStyle="bold"
            android:id="@+id/movie_name"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>
